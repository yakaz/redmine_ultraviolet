<style>
.uv-file pre {
  font-size: 12px;
  margin: 0 0 0 0;
  padding: none;
}

.uv-file {
  overflow-x: auto;
  border: 4px solid black;
}
</style>

<div class="uv-file">
  <%= syntax_highlight( filename, Redmine::CodesetUtil.to_utf8_by_setting(content) ).html_safe %>
</div>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag("uv_themes/#{@uv_theme_name}", :plugin => 'redmine_ultraviolet').html_safe %>
<% end %>
